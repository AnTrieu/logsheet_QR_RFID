<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvCurrentFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Frequency: Unknown"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Frequency:"
        android:layout_marginBottom="4dp"/>

    <Spinner
        android:id="@+id/spFrequency"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnSetFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Frequency"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvCurrentPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Power: Unknown"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Power:"
        android:layout_marginBottom="4dp"/>

    <Spinner
        android:id="@+id/spPower"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnSetPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Power"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvCurrentRFID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current RFID: Unknown"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write RFID Data:"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etWriteData"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:hint="Enter data to write"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnWriteRFID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write RFID"/>

</LinearLayout>